@model finalproject.Models.Product
@{
    ViewData["Title"] = "Delete Product - Admin Panel";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #92000A;">
                    <h4 class="mb-0">Delete Product</h4>
                </div>
                <div class="card-body p-4">
                    <h5>Are you sure you want to delete this product?</h5>
                    
                    @if (ViewBag.HasOrderItems == true)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Warning:</strong> This product has been ordered @ViewBag.OrderItemCount time(s) and cannot be deleted. 
                            Products with order history must be retained for record-keeping purposes.
                        </div>
                    }
                    
                    <div class="my-4">
                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid mb-3" style="max-height: 200px;" onerror="this.src='https://via.placeholder.com/300x300'">
                        <h5>@Model.Name</h5>
                        <p><strong>Category:</strong> @Model.Category / @Model.SubCategory</p>
                        <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                        <p><strong>Stock:</strong> @Model.Stock</p>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="ProductsList" class="btn btn-outline-secondary">Cancel</a>
                            @if (ViewBag.HasOrderItems == true)
                            {
                                <button type="submit" class="btn text-white" style="background-color: #92000A;" disabled title="Cannot delete products with order history">Delete</button>
                            }
                            else
                            {
                                <button type="submit" class="btn text-white" style="background-color: #92000A;">Delete</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

